<section>
    <div class="container-fluid">
        <h1>Profile</h1>
        <button id="editBtn">
            Edit Profile
        </button>
        <form>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                    {{!-- need to populate with actual variables --}}
                    <h2>Account Information</h2>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <input id="email" name="email" type="email" class="form-control form-control-lg" required />
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">First Name</p>
                        </div>
                        <div class="col-sm-9">
                            <input id="firstname" name="firstname" type="firstname" class="form-control form-control-lg" required />
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Last Name</p>
                        </div>
                        <div class="col-sm-9">
                            <input id="lastname" name="lastname" type="lastname" class="form-control form-control-lg" required />
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone Number</p>
                        </div>
                        <div class="col-sm-9">
                            <input id="phone" name="phone" type="phone" class="form-control form-control-lg" required />
                        </div>
                    </div>
                </div>         
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2>Personal Information</h2>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Venmo</p>
                            </div>
                            <div class="col-sm-9">
                                <input id="venmo" name="venmo" type="venmo" class="form-control form-control-lg" required />
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Street Address</p>
                            </div>
                            <div class="col-sm-9">
                                <input id="streetAddress" name="streetAddress" type="streetAddress" class="form-control form-control-lg" required />
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">City</p>
                            </div>
                            <div class="col-sm-9">
                                <input id="city" name="city" type="city" class="form-control form-control-lg" required />
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Zipcode</p>
                            </div>
                            <div class="col-sm-9">
                                <input id="zipcode" name="zipcode" type="zipcode" class="form-control form-control-lg" required />
                            </div>
                        </div>
                        <hr>
                        <div class="form-check">
                            <input id="isDriver" name="isDriver" type="checkbox" required />
                            <label for="isDriver" class="form-label">I am a driver.</label>
                        </div>
                    </div>
                </div>
            </div>
            <button id="saveChangesBtn">
                Save Changes
            </button>
        </form>
    </div>
</section>