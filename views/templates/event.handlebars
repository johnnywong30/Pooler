<div class="container">
    <div class="section-container">
        <section class="section">
            <div class="section-title">
                <h1 class="title event-heading">
                    {{name}}
                </h1>
            </div>
            <div class="section-container">
                <div class="text-container event-details-container">
                    <h2 class="event-details-heading">
                        Details
                    </h2>
                    <dl class="event-details">
                        <dt class="event-detail-label dt-inline">Host</dt>
                        <dd class="event-detail-info dd-inline">{{host}}</dd>

                        <dt class="event-detail-label dt-inline">Time</dt>
                        <dd class="event-detail-info dd-inline">{{date}} {{startTime}}</dd>

                        <dt class="event-detail-label dt-inline">Address</dt>
                        <dd class="event-detail-info dd-inline">{{displayAddress}}</dd>

                        <dt class="event-detail-label">Description</dt>
                        <dd class="event-detail-info">{{description}}</dd>
                    </dl>
                </div>
                <div class="text-container event-carpool-container">
                    <h2 class="event-details-heading">
                        Carpools
                    </h2>
                    <dl class="event-details">
                        <dt class="event-detail-label dt-inline">Capacity</dt>
                        <dd id="capacity" class="event-detail-info dd-inline">{{occupied}}/{{capacity}}</dd>

                        {{! TODO Client side js to render carpools here }}
                        {{! TODO To join an event, you must join a carpool with open seats }}
                    </dl>
                </div>
                <div class="event-calendar">
                    {{> eventsorts}}
                    <div id="eventList" class="event-list">

                    </div>
                    <div id="password-modal" class="modal-box">
                        <div class="modal-content">
                            <h1 class="modal-title">Private Event</h1>
                            <form id="private-event-form" action="/" method="POST" autocomplete="off">
                                <div id="client-error" class="modal-error" hidden>

                                </div>
                                <div class="profile-form-item">
                                    <input id="private-event-password" name="password" type="password" required />
                                    <label for="private-event-password">Password</label>
                                </div>
                                <div class="modal-footer">
                                    <button id="private-event-submit" class="submit-btn" type="submit"
                                        value="submit">Submit</button>
                                </div>
                            </form>
                            <span id="modal-close-btn" class="modal-close">&times;</span>
                        </div>
                    </div>

                    <div id="host-modal" class="modal-box">
                        <div class="modal-content">
                            <h1 class="modal-title">Host an Event</h1>
                            <form id="host-event-form" method="POST" autocomplete="off">
                                <div id="host-event-error" class="modal-error" hidden>

                                </div>
                                
                                <div class="profile-form-item">
                                    <input id="host-event-name" name="name" type="text" required />
                                    <label for="host-event-name">Event Name</label>
                                </div>
                                <div class="profile-form-item host-event-4">
                                    <input id="host-event-time" class="event-col-3" name="time" type="datetime-local"
                                        pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" required />
                                    <label class="col-3-label" for="host-event-time">Time</label>
                                    <input id="host-event-capacity" class="event-col-1" name="capacity" type="number"
                                        min="1" required />
                                    <label class="col-1-label" for="host-event-capacity">Capacity</label>
                                </div>
                                <div class="profile-form-item">
                                    <textarea id="host-event-description" name="description" required></textarea>
                                    <label for="host-event-description">Description</label>
                                </div>

                                <div class="profile-form-item">
                                    <input id="host-event-street" name="street" type="text" required />
                                    <label for="host-event-street">Street Address</label>
                                </div>

                                <div class="address-form-container host-event-address-container">
                                    <div class="city-input-container">
                                        <input class="address-input city-input" id="host-event-city" name="city" type="text"
                                            required />
                                        <label class="address-label city-label host-city-label" for="host-event-city">City</label>
                                    </div>
                                    <div class="zip-input-container">
                                        <input class="address-input zip-input" id="host-event-zip" name="zipcode"
                                            type="number" required />
                                        <label class="address-label zip-label host-zip-label" for="host-event-zipcode">Zip</label>
                                    </div>
                                    <div class="state-input-container">
                                        <select class="address-input state-select" id="host-event-state" name="state"
                                            aria-label="state" required>
                                            <option class="state-option" label="State"></option>
                                            {{#each states}}
                                            <option class="state-option" value={{this}}>{{this}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>

                                <div class="profile-form-item private-event-checkbox">
                                    <input id="host-event-private" name="private" type="checkbox" value="private" />
                                    <label for="host-event-private">Private Event</label>
                                </div>



                                <div id="host-footer" class="modal-footer">
                                    <button id="private-event-submit" class="submit-btn" type="submit"
                                        value="submit">Create</button>
                                </div>
                            </form>
                            <span id="event-close-btn" class="modal-close">&times;</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>