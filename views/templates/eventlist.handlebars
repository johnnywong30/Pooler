<div class="container">
    <div id="events" class="section-container">
        <section class="section">
            <div class="section-title">
                <h2 class="title">
                    Events
                </h2>
            </div>
            <div class="search-box">
                <input type="text" class="search-input" placeholder="Search for an Event...">
                <button class="search-button">
                    <span class="fas fa-search"></span>
                </button>

            </div>
            <div class="event-calendar">
                {{> eventsorts}}
                <div class="event-list">
                    {{#each events}}
                        {{> eventcard date=date month=month title=title description=description}}
                    {{/each}}
                </div>
            </div>
        </section>
    </div>

    {{> footer}}
</div>