<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 text-black">
                <div class="px-5 ms-xl-4">
                    {{!-- Animation Logo Here Lottie? --}}
                    <span class="h1 fw-bold mb-0">Pooler</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form id="login-form" action="/login" method="POST" style="width: 23rem">
                        <h3 class="fw-normal mb-1 pb-3" style="letter-spacing: 1px;">Login</h3>
                        {{#if error}}
                        <div class="d-flex align-items-center mb-3">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                Error {{error}}
                            </div>
                            {{!-- TODO Get button to dismiss alert using js --}}
                        </div>
                        {{/if}}
                        <div id="client-error" class="row" hidden>

                        </div>
                        <div class="form-outline mb-4">
                            <input id="email" name="email" type="text" class="form-control form-control-lg" required />
                            <label for="email" class="form-label">Email</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input id="password" name="password" type="password" class="form-control form-control-lg"
                                required />
                            <label for="password" class="form-label">Password</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>

                        <p>Don't have an account? <a href="/register" class="link-info">Register here</a></p>
                    </form>
                </div>
            </div>
            <div class="col-sm-7 px-0 d-none d-sm-block">
                <img src="/public/imgs/car2.jpg" alt="Login Car" class="w-100 vh-100"
                    style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="/public/js/validateLogin.js"></script>