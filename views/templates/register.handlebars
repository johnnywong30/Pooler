<main>
    {{#if error}}
    <p class="error">
        {{error}}
    </p>
    {{/if}}
    <form id="register-form" action="/register" method="POST">
        <label for="email">
            Email
        </label>
        <input id="email" name="email" type="text" required />

        <label for="password">
            Password
        </label>
        <input id="password" name="password" type="password" required />

        <label for="firstName">
            First Name
        </label>
        <input id="firstName" name="firstName" type="text" required />

        <label for="lastName">
            Last Name
        </label>
        <input id="lastName" name="lastName" type="text" required />

        <label for="phone">
            Phone Number
        </label>
        <input id="phone" name="phone" type="tel" required />

        <label for="venmo">
            Venmo
        </label>
        <input id="venmo" name="venmo" type="text" required />

        <label for="street">
            Street
        </label>
        {{!-- Need Middleware to process address stuff into an address object --}}
        <input id="street" name="street" type="text" required />

        <label for="city">
            City
        </label>
        <input id="city" name="city" type="text" required />

        <label for="state">
            State
        </label>
        <select id="state" name="state">
            {{#each states}}
            <option value={{this}}>{{this}}</option>
            {{/each}}
        </select>

        <label for="zipcode">
            Zipcode
        </label>
        <input id="zipcode" name="zipcode" type="text" required />

        <label for="isDriver">
            Can you drive?
        </label>
        <input type="checkbox" id="isDriver" name="isDriver" value="yes">

        <button type="submit">Register</button>
    </form>
    <a href="/login">Already have an account? Click here to login</a>
</main>